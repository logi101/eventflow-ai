# ============================================================================
# EventFlow AI - Environment Variables Template
# ============================================================================
# Instructions:
# 1. Copy this file to .env
# 2. Replace placeholder values with actual keys
# 3. DO NOT commit .env to Git!
# 4. Add sensitive secrets to Supabase Dashboard → Edge Functions → Secrets

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================

# Supabase Project URL (Get from Supabase Dashboard → Settings → API)
VITE_SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous Key (Public - Safe for frontend)
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Database Password (Internal use only)
SUPABASE_DB_PASSWORD=your-db-password-here

# ============================================================================
# AI CONFIGURATION (Edge Functions Secrets)
# ============================================================================

# Gemini API Key for AI features (AI Chat, Vendor Analysis, etc.)
# Get from: https://aistudio.google.com/app/apikey
# Set in: Supabase Dashboard → Edge Functions → Secrets
GEMINI_API_KEY=your-gemini-api-key-here

# ============================================================================
# WHATSAPP CONFIGURATION (Edge Functions Secrets)
# ============================================================================

# Green API Instance ID
# Get from: https://green-api.com
# Set in: Supabase Dashboard → Edge Functions → Secrets
GREEN_API_INSTANCE=your-green-api-instance-id

# Green API Token
GREEN_API_TOKEN=your-green-api-token-here

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Encryption key for storing API credentials securely (32 characters minimum)
# Generate: openssl rand -base64 32
ENCRYPTION_KEY=your-32-character-encryption-key-change-me-in-production

# ============================================================================
# TIER MANAGEMENT (v2.1 - SaaS Tier Structure)
# ============================================================================

# Service Role Key for admin operations (DO NOT commit to Git!)
# Get from: Supabase Dashboard → Settings → API → service_role
# Set in: Supabase Dashboard → Edge Functions → Secrets
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================================================
# NOTIFICATION CONFIGURATION
# ============================================================================

# VAPID Public Key for Push Notifications (Public - Safe for frontend)
# Generate: npx web-push generate-vapid-keys
VITE_VAPID_PUBLIC_KEY=your-vapid-public-key-here

# VAPID Private Key (DO NOT commit to Git!)
VAPID_PRIVATE_KEY=your-vapid-private-key-here

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================

# Firebase Project ID
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id

# Application URL
VITE_APP_URL=https://your-app-url.web.app

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/Disable features
VITE_ENABLE_AI_CHAT=true
VITE_ENABLE_VENDOR_ANALYSIS=true
VITE_ENABLE_SIMULATION=true
VITE_ENABLE_TRIAL_MODE=true

# ============================================================================
# TIER LIMITS (Base Tier - Default)
# ============================================================================

# Events per year (Base tier)
VITE_BASE_EVENTS_LIMIT=5

# Participants per event (Base tier)
VITE_BASE_PARTICIPANTS_LIMIT=100

# Messages per month (Base tier)
VITE_BASE_MESSAGES_LIMIT=200

# AI messages per month (Base tier)
VITE_BASE_AI_MESSAGES_LIMIT=50

# ============================================================================
# TRIAL CONFIGURATION (v2.1)
# ============================================================================

# Trial duration in days
VITE_TRIAL_DURATION_DAYS=7

# Trial reminder days (show banner before trial ends)
VITE_TRIAL_WARNING_DAYS=5

# ============================================================================
# DEBUG CONFIGURATION
# ============================================================================

# Enable debug mode (set to 'true' for development)
VITE_DEBUG=false

# Log level: 'error', 'warn', 'info', 'debug'
VITE_LOG_LEVEL=info

# ============================================================================
# END OF ENV FILE
# ============================================================================
